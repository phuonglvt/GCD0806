@model GCD0806.Models.Team
@{
    ViewBag.Title = "Create Team";
}

<h2>Create a new Team</h2>
@using (Html.BeginForm("Create", "Team", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label>Team Name</label>
        @Html.TextBoxFor(m => m.Name, "", new {@class ="form-control"})
        @Html.ValidationMessageFor(m => m.Name,"", new {@class ="text-danger"})
        @Html.ValidationMessage("Duplicate", new {@class ="text-danger"})
    </div>
    <button type="submit" class="btn btn-primary">Create a new Team</button>

}

