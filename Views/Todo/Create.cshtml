@model GCD0806.Models.Todo
@{
    ViewBag.Title = "Create";
}

<h2>Create a new Todo</h2>
@using (Html.BeginForm("Create", "Todo", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class ="text-danger" })
    <div class="form-group">
        <label>Description: </label>
        @Html.TextBoxFor(m => m.Description,"", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Description, "Please enter Todo description!",
            new { @class ="text-danger"})
    </div>
    <div class="form-group">
        <label>Due Date: </label>
        @Html.TextBoxFor(m => m.DueDate,"", new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(m => m.DueDate, "Please enter Todo Due Date!",
            new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create a new Todo</button>
    </div>
}

