@model GCD0806.ViewModel.TodoCategoryViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit a Todo</h2>
@using (Html.BeginForm("Edit", "Todo", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    //Edit trả về có ID
    @Html.HiddenFor(m => m.Todo.Id)
<div class="form-group">
    <label>Description: </label>
    @Html.TextBoxFor(m => m.Todo.Description, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Todo.Description, "",
       new { @class = "text-danger" })
</div>
<div class="form-group">
    <label>Due Date: </label>
    @Html.TextBoxFor(m => m.Todo.DueDate, new { @class = "form-control", type = "date" })
    @Html.ValidationMessageFor(m => m.Todo.DueDate, "",
        new { @class = "text-danger" })
</div>
<div class="form-group">
    <label>Category</label>
    @Html.DropDownListFor(m => m.Todo.CategoryId,
       new SelectList(Model.Category, "ID", "Description"),
       new { @class = "form-control" }
       )
</div>
<div class="form-group">
    <button type="submit" class="btn btn-primary">Update Todo</button>
</div>
}

